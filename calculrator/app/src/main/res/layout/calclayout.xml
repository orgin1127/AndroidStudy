<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#B2EBF2"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#9E9E9E">

        <TableRow
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp">
            <Button
                android:text="C"
                android:textSize="20sp"/>
            <Button
                android:text="/"
                android:textSize="20sp"/>
            <Button
                android:text="X"
                android:textSize="20sp"/>
            <Button
                android:text="<-"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:text="7"
                android:textSize="20sp"/>
            <Button
                android:text="8"
                android:textSize="20sp"/>
            <Button
                android:text="9"
                android:textSize="20sp"/>
            <Button
                android:text="-"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:text="4"
                android:textSize="20sp"/>
            <Button
                android:text="5"
                android:textSize="20sp"/>
            <Button
                android:text="6"
                android:textSize="20sp"/>
            <Button
                android:text="+"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:text="1"
                android:textSize="20sp"/>
            <Button
                android:text="2"
                android:textSize="20sp"/>
            <Button
                android:text="3"
                android:textSize="20sp"/>
            <Button
                android:text="()"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:text="0"
                android:textSize="20sp"/>
            <Button
                android:text="."
                android:textSize="20sp"/>
            <Button
                android:text="+/-"
                android:textSize="20sp"/>
            <Button
                android:text="="
                android:textSize="20sp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>